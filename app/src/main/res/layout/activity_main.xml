<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <TextView
                android:id="@+id/textView"
                style="@style/FontHeader"
                android:text="@string/main_header" />

            <include layout="@layout/inc_button_streamer"/>
            <include layout="@layout/inc_button_scores"/>
            <include layout="@layout/inc_button_library"/>
            <include layout="@layout/inc_button_builditbig"/>
            <include layout="@layout/inc_button_xyzreader"/>
            <include layout="@layout/inc_button_capstone"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
